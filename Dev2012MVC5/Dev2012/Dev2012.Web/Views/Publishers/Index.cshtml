@using Dev2012.Web.Helpers
@model IEnumerable<Dev2012.Web.Models.Publisher>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Authorize.CheckPermission("Publishers", "Create"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Code
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Notes
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @if (Authorize.CheckPermission("Publishers", "Edit"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                }
                |
                @if (Authorize.CheckPermission("Publishers", "Details"))
                {
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                }
                |
                @if (Authorize.CheckPermission("Publishers", "Delete"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
